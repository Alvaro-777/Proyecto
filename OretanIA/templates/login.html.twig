{% extends 'base.html.twig' %}
{% block head %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block title %}Iniciar Sesión - Oretan-IA{% endblock %}
{% block cabecera %}Lógate - Oretan-IA{% endblock %}
{% block body %}
    <main>
        <header id="login-header">
            <h1>Iniciar Sesión</h1>
            <p>Accede a tu cuenta para continuar explorando Oretan-IA</p>
        </header>
        {% for message in app.flashes('error') %}
            <div style="color: red; margin-bottom: 10px;">
                {{ message }}
            </div>
        {% endfor %}
        <form action="{{ path('verify-login') }}" method="post" id="login-form">
            <p id="login-general-error" style="color: red; display: inline">{{ error[0] }}</p><br>

            <label for="login-email">Correo electrónico</label><br>
            <input type="email" id="login-email" name="login-email" required>
            <p id="login-email-error" style="color: red; display: inline">{{ error[1] }}</p><br>

            <label for="login-pswd">Contraseña</label><br>
            <input type="password" id="login-pswd" name="login-pswd" required>
            <p id="login-pswd-error" style="color: red; display: inline">{{ error[2] }}</p><br>

            <button type="submit" id="login-submit">Entrar</button>
        </form>
        <section>
            <span>¿No tienes cuenta?</span> <a href="{{ path('registro') }}">Regístrate aquí</a>
            <br>
            <a href="./recover-account">¿Olvidaste tu cuenta?</a>
        </section>
        <script src="{{ asset('script/login.js') }}"></script>
    </main>
{% endblock %}