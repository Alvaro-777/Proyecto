{% extends 'base.html.twig' %}
{% block title %}¡Pago completado!{% endblock %}
{% block head %}
    <link rel="stylesheet" href="{{ asset('css/confirmacion.css') }}">
{% endblock %}
{% block body %}
    <h1>¡Compra confirmada!</h1>

    <div style="border: 1px solid #2E7D32; padding: 20px; margin: 20px; max-width: 500px;">
        <h2>¡Gracias por tu compra!</h2>
        <p>Has recibido <strong>{{ creditos }} créditos</strong> en tu cuenta.</p>

        {% if tieneDescuento %}
            <p style="color: #2E7D32;"><strong>¡Gracias por confiar en nosotros! Disfruta de tu descuento de bienvenida.</strong></p>
        {% endif %}

        <p><strong>Total pagado:</strong> {{ precio }} €</p>
        <p><strong>Método:</strong> Simulado</p>

        <a href="{{ path('home') }}" style="padding: 8px 16px; background-color: #3b82f6; color: white; text-decoration: none;">
            Volver al inicio
        </a>
    </div>
{% endblock %}